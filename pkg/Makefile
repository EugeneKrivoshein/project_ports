# Makefile для запуска всех тестов

# Переменная для Go проекта
GO = go

# Путь до всех тестов
TESTS = ./...

# Цель по умолчанию - запуск тестов
all: test

# Цель для запуска всех тестов
test:
	$(GO) test $(TESTS)

# Цель для чистки временных файлов (например, если вы хотите выполнить "go clean")
clean:
	$(GO) clean
